<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="6dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        android:elevation="8dp"
        android:backgroundTint="@color/white"
        android:id="@+id/card_view2">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/blackcolor"
                android:textSize="16sp"
                android:id="@+id/qty"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:id="@+id/descript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/editext_background"
                    android:padding="3dp"
                    android:layout_weight="10"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:text="description"
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded,TextFields" />

                <TextView
                    android:id="@+id/kmanufacture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="manufacture"
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/kmodel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="10"

                >

                <!--  <TextView
                     android:id="@+id/program"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="program"
                     android:textColor="@color/blackcolor"
                     android:textSize="23sp" /> -->
                <TextView
                    android:id="@+id/kpartid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"

                    android:text="partname"
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/kserialno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SerialNo"
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/cellprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textColor="@color/blackcolor"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>