<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight=".5"
            android:weightSum="1"

            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textSize="14dp"
                android:textColor="@color/blackcolor"
                android:text="Ordered Qty :"/>

            <TextView
                android:id="@+id/kqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="QTY"
                android:textColor="@color/blackcolor"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="1"
            android:layout_weight=".5"

            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textSize="14dp"
                android:textColor="@color/blackcolor"
                android:text="Ship Qty :"/>

            <EditText
                android:id="@+id/sh_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:padding="3dp"
                android:inputType="number"
                android:background="@drawable/editext_background"
                android:textColor="@color/blackcolor"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/descript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/editext_background"
            android:padding="3dp"
            android:layout_weight="10"
            android:text="description"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded,TextFields" />

        <TextView
            android:id="@+id/kmanufacture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="manufacture"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="10"

        >

        <!--  <TextView
             android:id="@+id/program"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="program"
             android:textColor="@color/blackcolor"
             android:textSize="16sp" /> -->
        <TextView
            android:id="@+id/kpartid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:text="partname"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/cellprice"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text=""
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="5"

        >

        <!--  <TextView
             android:id="@+id/program"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="program"
             android:textColor="@color/blackcolor"
             android:textSize="16sp" /> -->
        <TextView
            android:id="@+id/txt_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:text="Notes"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blackcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/kserialno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SerialNo"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>