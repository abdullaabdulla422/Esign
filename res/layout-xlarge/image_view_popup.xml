<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1"
    tools:ignore="Overdraw">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:ignore="UselessParent">


    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_gravity="top|right"
        android:src="@drawable/closebutton"
        tools:ignore="ContentDescription,RtlHardcoded">
    </ImageView>
    <ImageView
        android:id="@+id/image_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#cfcfcf"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:paddingRight="10dp"
        tools:ignore="ContentDescription,InefficientWeight">

    </ImageView>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Select Type"
       android:textColor="@color/black"
       android:textSize="23sp"
       android:layout_margin="2dp"
       tools:ignore="HardcodedText" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_type"
        android:layout_margin="3dp"
        >

    </Spinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:layout_margin="2dp"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="top|left"
        android:id="@+id/notes"
        android:layout_margin="3dp"
        android:background="@drawable/editext_background"
        android:textSize="23sp"
        tools:ignore="RtlHardcoded,TextFields" />

        <ImageView
            android:id="@+id/img_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginRight="5dp"
            android:src="@drawable/mic" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <com.ebs.rental.uidesigns.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/RippleStyle"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"

            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/ButtonStyle.RaisedEmpty"
                android:id="@+id/btn_save"
                android:textSize="23sp"
android:textStyle="bold"
                android:textColor="@color/white"

                android:background="@drawable/round_button_corner"
                android:text="Next Picture"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>

        <com.ebs.rental.uidesigns.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/RippleStyle"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"

            >

            <Button
                android:id="@+id/btn_continue"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/round_button_corner"
                android:text="Continue to Checklist"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>



        <com.ebs.rental.uidesigns.MaterialRippleLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RippleStyle"
            android:layout_gravity="center"

            >

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                style="@style/ButtonStyle.RaisedEmpty"
                android:textSize="18dp"

                android:id="@+id/btn_delete"
                android:textColor="@color/white"
                android:background="@drawable/round_button_corner"
                android:text="Delete"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>


    </LinearLayout>


</LinearLayout>

</LinearLayout>