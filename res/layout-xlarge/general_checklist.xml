<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1"
    tools:ignore="Overdraw">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_height="60dp"
        android:background="@drawable/round_button_corner" >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Check List"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="center"
            tools:ignore="Deprecated,HardcodedText,SpUsage" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/back"
            android:layout_toRightOf="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="Back"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="24dp"

            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:ignore="InefficientWeight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:textColor="@color/blackcolor"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="Make :"
                android:textSize="24dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:layout_weight=".5"
                android:textColor="@color/blackcolor"
                android:layout_height="wrap_content"
                android:text="Model :"
                android:textSize="24dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:layout_weight=".5"
                android:textColor="@color/blackcolor"
                android:layout_height="wrap_content"
                android:text="Serial # :"
                android:textSize="24dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:layout_weight=".5"
                android:textColor="@color/blackcolor"
                android:layout_height="wrap_content"
                android:text="Unit ID :"
                android:textSize="24dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:ignore="UseCompoundDrawables">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Right Exterior"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="24dp"
            tools:ignore="HardcodedText,InefficientWeight" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/camera_selector"
            tools:ignore="ContentDescription" />


    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/editext_background"
        android:hint="Enter notes about Right Exterior"
        android:layout_margin="2dp"
        android:textSize="24dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left Exterior"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="24dp"
            tools:ignore="HardcodedText,InefficientWeight" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/camera_selector"
            tools:ignore="ContentDescription" />


    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/editext_background"
        android:hint="Enter notes about Left Exterior"
        android:layout_margin="2dp"
        android:textSize="24dp"
        tools:ignore="HardcodedText" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_corner"
        style="@style/btnStyleGenoa"
        android:text="Submit"
        tools:ignore="HardcodedText" />

</LinearLayout>