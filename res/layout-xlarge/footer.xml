<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        tools:ignore="RtlHardcoded,UselessParent">

        <com.ebs.rental.uidesigns.MaterialRippleLayout
            android:id="@+id/ripple1"
            style="@style/RippleStyle"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"

            >

        <Button
            android:id="@+id/btnnextpress"
            style="@style/btnStyleGenoa"
            android:layout_width="match_parent"
            android:background="@drawable/round_button_corner"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Next"

            tools:ignore="HardcodedText,RtlHardcoded" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>
        <com.ebs.rental.uidesigns.MaterialRippleLayout
            android:id="@+id/ripple2"
            style="@style/RippleStyle"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"

            >


        <Button
            android:id="@+id/btnsubmitpress"
            style="@style/btnStyleGenoa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_corner"
            android:textSize="23sp"


            android:text="Continue"
            tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>

        <com.ebs.rental.uidesigns.MaterialRippleLayout
            android:id="@+id/ripple3"
            style="@style/RippleStyle"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"

            >


        <Button
            android:id="@+id/btnbackpress"
            style="@style/btnStyleGenoa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/round_button_corner"
            android:textSize="23sp"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:text="Back"
            tools:ignore="HardcodedText,RtlHardcoded" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>
    </LinearLayout>

</RelativeLayout>