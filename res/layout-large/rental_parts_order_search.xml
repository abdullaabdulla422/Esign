<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradient"
    android:orientation="vertical" >
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_800"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/back"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Order Search"
        android:textColor="@android:color/white"
     android:layout_centerInParent="true"
        android:background="@color/material_blue_800"
        android:layout_marginRight="70dp"
        android:textSize="18sp"
        android:textStyle="bold"
     tools:ignore="HardcodedText,RtlHardcoded" />
 </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackcolor"
        android:textSize="16sp"
        android:text="Parts Order #"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/edt_porderno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/editext_background"
        android:focusableInTouchMode="true"
        android:imeOptions="flagNoFullscreen"
        android:inputType="number"
        android:padding="@dimen/textPadding"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textfieldsize"
        tools:ignore="Deprecated">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
         android:textColor="@color/blackcolor"
        android:text="Customer Name"
        android:textSize="16sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/edt_pcustname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/editext_background"
        android:focusableInTouchMode="true"
        android:imeOptions="flagNoFullscreen"
        android:inputType="text"
        android:padding="@dimen/textPadding"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textfieldsize"
        tools:ignore="Deprecated">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
         >

        <com.ebs.rental.uidesigns.MaterialRippleLayout

            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_weight="1"

            android:layout_margin="10dp">
<Button
            android:id="@+id/btn_pdealer"
            style="@style/btnStyleGenoa"
            android:layout_width="match_parent"
           android:visibility="gone"
            android:layout_height="40dp"
    android:background="@drawable/round_button_corner"
    android:text="Dealer"
            android:textSize="16sp"
    tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>
        <com.ebs.rental.uidesigns.MaterialRippleLayout

            style="@style/RippleStyle"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_margin="10dp"
           >
        <Button
            android:id="@+id/btn_psearch"
            style="@style/btnStyleGenoa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:background="@drawable/round_button_corner"

            android:text="Search"
            tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>
        <com.ebs.rental.uidesigns.MaterialRippleLayout

            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp">

        <Button
            android:id="@+id/btn_pclear"
            style="@style/btnStyleGenoa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_button_corner"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="Clear"
            tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>
    </LinearLayout>

</LinearLayout>