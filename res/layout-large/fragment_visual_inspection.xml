<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.ebscssp.main.VisualInspection$PlaceholderFragment" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/part_inspect"
            android:textSize="@dimen/textfieldsize"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/visual_background"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_front"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/inspection_front" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_left_front"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_gravity="left"
                        android:contentDescription="@string/inspection_front"
                        tools:ignore="RtlHardcoded" />

                    <ImageView
                        android:id="@+id/img_left"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_gravity="left"
                        android:contentDescription="@string/inspection_front"
                        tools:ignore="RtlHardcoded" />

                    <ImageView
                        android:id="@+id/img_left_rear"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_gravity="left"
                        android:contentDescription="@string/inspection_front"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_center"
                    android:layout_width="50dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:contentDescription="@string/inspection_front" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:id="@+id/img_right_front"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/inspection_front" />

                    <ImageView
                        android:id="@+id/img_right"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/inspection_front" />

                    <ImageView
                        android:id="@+id/img_right_rear"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/inspection_front" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_rear"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/inspection_front" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:layout_marginRight="@dimen/right_margin"
            tools:ignore="RtlHardcoded">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:background="@drawable/round_button_corner"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>