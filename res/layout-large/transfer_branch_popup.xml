<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/dialog_box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/material_blue_800"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:layout_margin="3dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Transfer Branch"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:id="@+id/cancelbtn"
            android:src="@drawable/close_button"
            android:layout_margin="5dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/inputSearch"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/editext_background"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Search Dealer Branch.."
            android:inputType="textVisiblePassword"
            android:singleLine="true" />
    </LinearLayout>
    <!--<TextView-->

    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_margin="5dp"-->
    <!--android:text="Address"-->
    <!--android:textColor="@color/black"-->
    <!--android:textStyle="bold"-->
    <!--android:textSize="18dp"-->
    <!--/>-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_transferbranch"
        android:divider="@color/divider"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:dividerHeight="1.5dp"
        android:scrollbars="none"
        android:layout_gravity="center"
        ></ListView>
    <com.ebs.rental.uidesigns.MaterialRippleLayout

        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:layout_margin="10dp">
        <Button
            android:id="@+id/moreorderlist"
            style="@style/btnStyleGenoa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="More List"
            android:textSize="16sp"
            android:background="@drawable/round_button_corner"

            android:textColor="@color/whitecolor" />
    </com.ebs.rental.uidesigns.MaterialRippleLayout>

</LinearLayout>