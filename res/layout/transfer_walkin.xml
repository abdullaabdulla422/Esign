<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:background="@color/material_blue_800">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:gravity="center"
            android:singleLine="true"
            android:text="Walk Around Inspection"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            tools:ignore="Deprecated,HardcodedText,SpUsage" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"

            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/close"
            android:text="Back"
            android:textColor="@android:color/white"


            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="InefficientWeight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".65"
                    android:text="Make :"
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,NestedWeights,SpUsage" />

                <TextView
                    android:id="@+id/make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".35"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".65"
                    android:text="Model :"
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,NestedWeights,SpUsage" />

                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".35"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="SpUsage" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".65"
                    android:text="Serial # :"
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,NestedWeights,SpUsage" />


                <TextView
                    android:id="@+id/serialno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".35"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="SpUsage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".65"
                    android:text="Unit ID :"
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,NestedWeights,SpUsage" />

                <TextView
                    android:id="@+id/unit_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".35"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".65"
                    android:text="Section :"
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,NestedWeights,SpUsage" />


                <TextView
                    android:id="@+id/txt_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".35"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="SpUsage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".65"
                    android:text="Spot :"
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,NestedWeights,SpUsage" />

                <TextView
                    android:id="@+id/txt_spot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight=".35"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="13dp"
                    tools:ignore="SpUsage" />

            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_weight=".65"
        android:textColor="@color/blackcolor"
        android:layout_height="wrap_content"
        android:text="Current branch :"
        android:textSize="13dp"
        tools:ignore="HardcodedText,SpUsage" />

        <TextView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_weight=".35"
        android:id="@+id/current_branch"
        android:textColor="@color/blackcolor"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13dp"
        tools:ignore="SpUsage" />

        </LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight=".65"
                android:text="Transfer From :"
                android:textColor="@color/blackcolor"
                android:textSize="13dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/transfer_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight=".35"
                android:text=""
                android:textColor="@color/blackcolor"
                android:textSize="13dp"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight=".65"
                android:text="Transfer To :"
                android:textColor="@color/blackcolor"
                android:textSize="13dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/customer_reciving_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight=".35"
                android:text=""
                android:textColor="@color/blackcolor"
                android:textSize="13dp"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Enter Notes:"
            android:textColor="@color/blackcolor"
            android:textSize="14dp"
            tools:ignore="HardcodedText" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/walk_around_notes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_background"
                android:gravity="top|left"
                android:textSize="14dp"
                tools:ignore="RtlHardcoded,TextFields" />

            <ImageView
                android:id="@+id/mic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/mic" />
        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black" />

        <LinearLayout

            android:id="@+id/Capture_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Gallery
                android:id="@+id/Image_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="left"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.ebs.rental.uidesigns.MaterialRippleLayout
            android:id="@+id/ripple_avail_btn"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_available_parking"
                style="@style/btnStyleGenoa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button_corner"
                android:padding="1dp"
                android:text="Available Parking"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>

        <com.ebs.rental.uidesigns.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_capture"
                style="@style/btnStyleGenoa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button_corner"
                android:text="@string/walkaround"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>

        <com.ebs.rental.uidesigns.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_next"
                style="@style/btnStyleGenoa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button_corner"
                android:gravity="center"
                android:text="Next"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>
    </LinearLayout>


</LinearLayout>