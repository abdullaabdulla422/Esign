<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/material_blue_800"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/material_blue_800"
            android:gravity="center_horizontal|center_vertical"
            android:text="Order Search"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Parts Order #"
        android:textColor="@color/blackcolor"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/edt_porderno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/editext_background"
        android:focusableInTouchMode="true"
        android:imeOptions="flagNoFullscreen"
        android:inputType="number"
        android:padding="@dimen/textPadding"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:ignore="Deprecated">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Customer Name"
        android:textColor="@color/blackcolor"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/edt_pcustname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/editext_background"
        android:focusableInTouchMode="true"
        android:imeOptions="flagNoFullscreen"
        android:inputType="text"
        android:padding="@dimen/textPadding"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:ignore="Deprecated">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal|end"
        >

        <com.ebs.rental.uidesigns.MaterialRippleLayout

            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_pdealer"
                style="@style/btnStyleGenoa"

                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:background="@drawable/round_button_corner"
                android:text="Dealer"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>

        <com.ebs.rental.uidesigns.MaterialRippleLayout

            style="@style/RippleStyle"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_gravity="start"

            >

            <Button
                android:id="@+id/btn_psearch"
                style="@style/btnStyleGenoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:background="@drawable/round_button_corner"
                android:text="Search"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>

        <com.ebs.rental.uidesigns.MaterialRippleLayout

            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_pclear"
                style="@style/btnStyleGenoa"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/round_button_corner"
                android:text="Clear"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </com.ebs.rental.uidesigns.MaterialRippleLayout>
    </LinearLayout>

</LinearLayout>